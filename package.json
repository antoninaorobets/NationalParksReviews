        "@mui/material": "^5.8.4",
        "@mui/styled-engine-sc": "^5.8.0",
        "@semantic-ui-react/css-patch": "^1.0.0",
        "bootstrap": "^5.1.3",
        "react-bootstrap": "^2.4.0",
        "semantic-ui-css": "^2.4.1",
        "semantic-ui-react": "^2.1.3",
        "styled-components": "^5.3.5"
    }
}
